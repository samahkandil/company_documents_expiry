<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_category_form2" model="ir.ui.view">
             <field name="name">document.type.form</field>
             <field name="model">document.type</field>
             <field name="arch" type="xml">
                 <form string="Company Tags">
                     <sheet>
                         <group>
                             <field name="name"/>
                         </group>
                     </sheet>
                 </form>
             </field>
         </record>

    <record model='ir.ui.view' id='company_document_tree_view'>
        <field name="name">document.type.tree</field>
        <field name="model">document.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_company_document_type_action" model="ir.actions.act_window">
        <field name="name">Company Document Types</field>
        <field name="res_model">document.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="document_types_menuitem"
              name="Company Document Types"
              parent="contacts.res_partner_menu_config"
              sequence="6"
              action="company_documents_expiry.hr_company_document_type_action"
              />
</odoo>